{
  "variables": {
    "gaia_commit_hash": "{{ env `GAIA_COMMIT_HASH` }}",
    "runsim_commit_hash": "{{ env `RUNSIM_COMMIT_HASH` }}",
    "go_tarball_file_name": "go1.12.2.linux-amd64.tar.gz"
  },
  "builders": [
    {
      "ami_name": "gaia-sim-{{ user `gaia_commit_hash` }}",
      "type": "amazon-ebs",
      "region": "us-east-1",
      "instance_type": "t2.xlarge",
      "ssh_username": "ec2-user",
      "force_deregister": true,
      "force_delete_snapshot": true,
      "launch_block_device_mappings": [{
        "device_name": "/dev/xvda",
        "volume_size": 8,
        "volume_type": "gp2",
        "delete_on_termination": true
      }],
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "amzn2-ami-hvm-2.0*x86_64*",
          "root-device-type": "ebs"
        },
        "owners": ["137112412989"],
        "most_recent": true
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sleep 30",
        "sudo yum -y install make git gcc curl",
        "curl -L -O https://dl.google.com/go/{{ user `go_tarball_file_name` }}",
        "sudo tar -C /usr/local -xzf {{ user `go_tarball_file_name` }}",
        "rm {{ user `go_tarball_file_name` }}"
      ]
    },
    {
      "type": "file",
      "source": "set_env.sh",
      "destination": "/tmp/set_env.sh"
    },
    {
      "type": "file",
      "source": "genesis.json",
      "destination": "/tmp/genesis.json"
    },
    {
      "type": "shell",
      "script": "install_gaiad.sh",
      "environment_vars": [
        "GAIA_COMMIT_HASH={{ user `gaia_commit_hash` }}",
        "RUNSIM_COMMIT_HASH={{ user `runsim_commit_hash` }}"
      ]
    }
  ]
}